<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AOTCombinedTests.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AOTCombinedTests"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
        
        <Button x:Name="myButton" HorizontalContentAlignment="Center" Width="200" Click="myButton_Click">Click Me</Button>

        <TabView>
            <TabView.TabItems>
                <TabViewItem
                    Header="Document 0">
                    <TabViewItem.IconSource>
                        <SymbolIconSource
                            Symbol="Placeholder" />
                    </TabViewItem.IconSource>
                    <local:AdvancedCollectionViewPage />
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </StackPanel>
</Window>
